<div class="row">
    <div class="span12">
        <h2>Products</h2>
        <ul class="thumbnails">
            <% @products.each do |product| %>
                <li class="span3">
                    <div class="thumbnail">
                        <%= image_tag product.photo_url(:thumb) if product.photo? %>
                        <div class="caption">
                            <h3><%= product.name.upcase %></h3>
                            <p>
                                <strong>Manufacturer:  </strong><%= product.brand.name.titleize %><br>
                                <strong>Model:  </strong><%= product.model.titleize %><br>
                                <strong>Ages:  </strong><%= product.age_level %>
                            </p>
                            <div class="btn-group offset1">
                                <%= link_to "Details", product, :class => "btn" %>
                                <%= link_to('', html_options = {:class => "btn dropdown-toggle", "data-toggle" => "dropdown"}) do %>
                                    <span class="caret"></span>
                                <% end %>
                                <ul class="dropdown-menu">
                                    <li>
                                        <%= link_to(edit_product_path(product)) do %>
                                            <i class="icon-pencil"></i>
                                            Edit
                                        <% end %>
                                    </li>
                                    <li>
                                        <%= link_to(product, html_options = {confirm: 'Are you sure?', method: :delete}) do %>
                                            <i class="icon-trash"></i>
                                            Remove
                                        <% end %>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </li>
            <% end %>
        </ul>
    </div>
</div>
<div class="row">
    <div class="span12">
        <%= link_to 'New Product', new_product_path %>
    </div>
</div>

